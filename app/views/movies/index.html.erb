<div class="container my-5 py-5 bg-white rounded shadow-lg">
  <div class="text-center mb-4">
    <h2 class="display-5 text-primary">Movies</h2>
  </div>

  <div class="mb-4 text-center">
    <%= link_to "My Lists", lists_path, class: "btn btn-primary px-4 py-2 shadow" %>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @movies.each do |movie| %>
      <div class="col">
        <div class="card h-100 shadow-sm">
          <img src="<%= movie.url %>" alt="<%= movie.title %> image" class="card-img-top" style="height: 200px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title"><%= link_to movie.title, movie_path(movie), class: "text-decoration-none text-dark" %></h5>
            <p class="card-text text-muted small"><%= movie.overview %></p>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center">
            <span class="badge bg-primary rounded-pill">Rating: <%= movie.rating %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
