
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-4 display-5 text-primary">My Lists</h2>
      <div class="list-group shadow-sm">
        <% @lists.each do |list| %>
          <div class="list-group-item d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><%= link_to list.name, list_path(list), class: "text-decoration-none text-dark" %></h5>
            <div class="btn-group">
              <%= link_to "View", list_path(list), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Edit", edit_list_path(list), class: "btn btn-outline-secondary btn-sm" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to "Create New List", new_list_path, class: "btn btn-primary" %>
        <%= link_to "Back to Movies", movies_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
