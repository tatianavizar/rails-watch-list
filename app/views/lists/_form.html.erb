<%= simple_form_for(list) do |f| %>
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-8">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title text-center mb-4">New Restaurant</h2>

            <%= f.input :name, label: "List Name", input_html: { class: "form-control" }, label_html: { class: "form-label" } %>

            <div class="d-flex justify-content-center mt-4">
              <%= f.submit "Save list", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
